# =============================================================================
# SAVE-IT.AI Environment Configuration
# =============================================================================
# Copy this file to .env and fill in the values.
# DO NOT commit .env to version control!

# =============================================================================
# Application Settings
# =============================================================================

# Debug mode (set to false in production)
DEBUG=true

# =============================================================================
# Database Configuration
# =============================================================================

# PostgreSQL connection string
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://saveit:your_password@localhost:5432/saveit

# =============================================================================
# Security Settings
# =============================================================================

# Session secret key (REQUIRED in production)
# Minimum 32 characters. Generate with:
# python -c "import secrets; print(secrets.token_urlsafe(32))"
SESSION_SECRET=change-me-in-production-use-at-least-32-chars

# Alternative: Load session secret from file (for Kubernetes)
# SESSION_SECRET_FILE=/run/secrets/session_secret

# CORS allowed origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:5000,http://localhost:3000

# =============================================================================
# Redis Configuration (Optional)
# =============================================================================

# Redis URL for rate limiting and caching
# Required for horizontal scaling
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# MQTT Broker Settings
# =============================================================================

# MQTT broker configuration for IoT device communication
MQTT_BROKER_HOST=0.0.0.0
MQTT_BROKER_PORT=1883
MQTT_BROKER_TLS_PORT=8883
MQTT_PUBLIC_HOST=localhost
MQTT_ENABLE_TLS=false

# =============================================================================
# Email Configuration
# =============================================================================

# Email provider: smtp or sendgrid
EMAIL_PROVIDER=smtp

# SMTP settings
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# SendGrid API key (if using SendGrid)
SENDGRID_API_KEY=

# =============================================================================
# External APIs
# =============================================================================

# OpenAI API key for AI features
OPENAI_API_KEY=
OPENAI_BASE_URL=https://api.openai.com/v1

# =============================================================================
# Webhook Configuration
# =============================================================================

# Base URL for webhooks
WEBHOOK_BASE_URL=https://your-domain.com/api/v1/webhooks

# API base URL
API_BASE_URL=https://your-domain.com/api/v1

# =============================================================================
# Cache Configuration
# =============================================================================

# Cache version (increment to invalidate all caches on deployment)
CACHE_VERSION=v1
