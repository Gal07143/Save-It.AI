modules = ["python-3.11", "nodejs-20"]
[agent]
expertMode = true
integrations = ["python_database:1.0.0", "python_openai_ai_integrations:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["glibcLocales", "libxcrypt"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "SAVE-IT.AI API"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "SAVE-IT.AI Frontend"

[[workflows.workflow]]
name = "SAVE-IT.AI API"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"
waitForPort = 8000

[[workflows.workflow]]
name = "SAVE-IT.AI Frontend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80
