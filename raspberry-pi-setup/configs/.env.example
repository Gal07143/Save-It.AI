# Save-It.AI Backend Configuration
# Copy this to backend/.env and update values

# Database (auto-generated during setup)
DATABASE_URL=postgresql://saveit:YOUR_PASSWORD@localhost:5432/saveit_db

# Redis
REDIS_URL=redis://localhost:6379/0

# MQTT
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883

# Security (generate with: openssl rand -base64 48)
SECRET_KEY=change-me-to-a-very-long-random-string
CSRF_SECRET_KEY=change-me-to-another-random-string

# CORS - Add your domains
CORS_ORIGINS=http://localhost:5002,http://saveit-demo.local,https://your-domain.com

# Environment
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# API Settings
API_V1_PREFIX=/api/v1
PROJECT_NAME=Save-It.AI

# Email (optional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@your-domain.com

# External APIs (optional)
# OPENAI_API_KEY=sk-...
# WEATHER_API_KEY=...
